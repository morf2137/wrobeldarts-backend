###############################################
#  Nyga Darts Backend - .env.example           #
#  SKOPIUJ TEN PLIK DO: .env                   #
#  UZUPEŁNIJ WARTOŚCI (REPLACE_ME)             #
#  NIE KOMITUJ PRAWDZIWEGO .env                #
###############################################

##########  REQUIRED  ##########
NODE_ENV=production
PORT=3000

# Publiczny adres frontendu (dla redirectów Stripe / PayPal)
FRONTEND_URL=https://wrobeldarts.pl

# Adres backendu (uzupełnij po deploy, potem redeploy)
BACKEND_URL=https://REPLACE_BACKEND_URL

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_live_REPLACE_ME
STRIPE_SECRET_KEY=sk_live_REPLACE_ME
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_ME

# JWT (losowy długi string do podpisywania tokenów)
JWT_SECRET=REPLACE_SUPER_RANDOM_SECRET_STRING

##########  DATABASE (opcjonalne ale wymagane jeśli użyjesz Mongo) ##########
# Lokalna baza
MONGODB_URI=mongodb://localhost:27017/nygadarts
# Atlas przykład (odkomentuj i wstaw dane)
# MONGODB_URI=mongodb+srv://USER:PASS@cluster.mongodb.net/nygadarts

##########  EMAIL (opcjonalne) ##########
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=REPLACE_EMAIL
SMTP_PASS=REPLACE_APP_PASSWORD

##########  PAYPAL (opcjonalne) ##########
PAYPAL_CLIENT_ID=REPLACE_ME
PAYPAL_CLIENT_SECRET=REPLACE_ME
PAYPAL_ENVIRONMENT=live

##########  PAYSAFECARD (opcjonalne) ##########
PAYSAFECARD_API_KEY=REPLACE_ME
PAYSAFECARD_ENVIRONMENT=PRODUCTION

##########  PAYU / BLIK (opcjonalne) ##########
PAYU_POS_ID=REPLACE_ME
PAYU_CLIENT_ID=REPLACE_ME
PAYU_CLIENT_SECRET=REPLACE_ME

###############################################
# UWAGI:
# 1. Ten plik zostaje w repo. Prawdziwe wartości tylko w .env (lokalnie) i w panelu Render.
# 2. Po pierwszym deploy skopiuj URL usługi Render i wstaw do BACKEND_URL, potem Redeploy.
# 3. Jeśli nie używasz któregoś providera – zostaw jego sekcję niewypełnioną.
###############################################
